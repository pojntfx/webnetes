{
  "name": "@pojntfx/webnetes",
  "version": "0.0.1",
  "description": "Like Kubernetes, but built with WebAssembly, WebRTC and WebTorrent.",
  "main": "dist/nodeLib/index.js",
  "module": "dist/webLib/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && yarn build:types && yarn build:lib:node && yarn build:lib:web && yarn build:app:node && yarn build:app:web && yarn build:diagram && yarn build:docs",
    "build:types": "parcel build --target types index.ts",
    "build:lib:node": "parcel build --target nodeLib index.ts",
    "build:lib:web": "parcel build --target webLib index.ts",
    "build:app:node": "parcel build --target nodeApp app/webnetes_node/main.ts && chmod +x dist/nodeApp/main.js",
    "build:app:web": "parcel build --target webApp app/webnetes_web/index.html",
    "build:diagram": "mkdir -p dist/media && tplant -p tsconfig.json -i 'lib/**/*.ts*' --output 'dist/media/diagram.svg'",
    "build:docs": "mkdir -p dist/docs && typedoc --tsconfig tsconfig.json --mode file --outDir dist/docs --out dist/docs --media dist/media --exclude '+(node_modules|dist)' .",
    "test": "jest",
    "dev:app:node": "LOG_LEVEL=debug DEBUG='' ts-node-dev --files app/webnetes_node/main.ts",
    "dev:app:web": "parcel --hmr-port 1235 --target webApp app/webnetes_web/index.html",
    "start:app:node": "./dist/nodeApp/main.js",
    "start:app:web": "serve dist/webApp",
    "start:docs": "serve dist/docs"
  },
  "bin": {
    "webnetes_node": "dist/nodeApp/main.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pojntfx/webnetes.git"
  },
  "author": "Felicitas Pojtinger <felicitas@pojtinger.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/pojntfx/webnetes/issues"
  },
  "homepage": "https://github.com/pojntfx/webnetes#readme",
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "jest": "^26.6.3",
    "parcel": "^2.0.0-nightly.469",
    "serve": "^11.3.2",
    "tplant": "^2.3.6",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@pojntfx/unisockets": "^0.0.13",
    "emittery": "^0.7.2",
    "winston": "^3.3.3"
  },
  "targets": {
    "nodeLib": {
      "isLibrary": true,
      "context": "node",
      "includeNodeModules": {
        "wrtc": false
      },
      "engines": {
        "node": ">=12.x"
      }
    },
    "webLib": {
      "isLibrary": true,
      "context": "browser",
      "engines": {
        "browsers": ">=5%"
      }
    },
    "nodeApp": {
      "engines": {
        "node": ">=12.x"
      }
    },
    "webApp": {
      "engines": {
        "browsers": ">=5%"
      }
    }
  },
  "jest": {
    "rootDir": "lib",
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}

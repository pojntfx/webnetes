{
  "name": "@pojntfx/webnetes",
  "version": "0.0.1",
  "description": "Like Kubernetes, but built with WebAssembly, WebRTC and WebTorrent.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "yarn build:lib && yarn build:bin && yarn build:web && yarn build:docs && yarn build:diagram",
    "build:lib": "rollup -c",
    "build:bin": "esbuild bin/webnetes_node/main.ts --bundle --minify --outfile=dist/main.js --platform=node --target=node12 --external:wrtc",
    "build:web": "parcel build --target browser ./bin/webnetes_web/index.html",
    "build:docs": "mkdir -p docs && typedoc --tsconfig tsconfig.json --mode file --outDir docs --media docs/media --exclude '+(node_modules|docs|dist)' .",
    "build:diagram": "mkdir -p docs/media && tplant -p tsconfig.json -i './**/*.ts*' --output 'docs/media/diagram.svg'",
    "test": "jest",
    "dev:bin": "LOG_LEVEL=debug DEBUG='' ts-node-dev --files bin/webnetes_node/main.ts",
    "dev:web": "parcel --hmr-port 1235 --target browser ./bin/webnetes_web/index.html",
    "start:bin": "./dist/main.js",
    "start:web": "serve dist/browser"
  },
  "bin": {
    "webnetes_node": "dist/main.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pojntfx/webnetes.git"
  },
  "author": "Felix Pojtinger <felix@pojtinger.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/pojntfx/webnetes/issues"
  },
  "homepage": "https://github.com/pojntfx/webnetes#readme",
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "esbuild": "^0.8.19",
    "jest": "^26.6.3",
    "parcel": "^2.0.0-nightly.469",
    "serve": "^11.3.2",
    "tplant": "^2.3.6",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@pojntfx/unisockets": "^0.0.12",
    "emittery": "^0.7.2",
    "rollup": "^2.34.2",
    "rollup-plugin-dts": "^2.0.0",
    "rollup-plugin-esbuild": "^2.6.0",
    "winston": "^3.3.3"
  },
  "targets": {
    "browser": {
      "distDir": "browser",
      "engines": {
        "browsers": "> 5%"
      }
    }
  }
}
